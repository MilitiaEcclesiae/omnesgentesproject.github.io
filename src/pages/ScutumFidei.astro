---
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';
import Features3 from '~/components/widgets/Features3.astro';
import SocialLinkSticker from '~/components/widgets/SocialLinkSticker.astro';
import TextOverlayImage from '~/components/widgets/TextOverlayImage.astro';
import Test from '~/components/widgets/Test.astro';
import content from 'src/data/post/scutumfidel.yaml';

const {
  metadata = {},
  images = {},
  textOverlayImages = [],
  contentItems = [],
  featuresItems = [],
} = content;
---

<Layout metadata={metadata}>
  <SocialLinkSticker />
  <Test />

  {textOverlayImages.map((item) => (
    <TextOverlayImage
      image={images[item.image]}
      title={item.title}
      subtitle={item.subtitle}
      textPosition={item.textPosition}
      textBgOpacity={item.textBgOpacity}
    />
  ))}

  {contentItems.map((item) => (
    <Content
      isReversed={item.isReversed}
      items={item.items}
      image={item.image}
    />
  ))}

  <Features3
    title="SPIRITUAL MANNA"
    subtitle=""
    columns={3}
    items={featuresItems}
    classes={{ container: 'max-w-5xl' }}
  />
</Layout>