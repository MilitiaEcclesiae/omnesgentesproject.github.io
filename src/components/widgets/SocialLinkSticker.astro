    <!-- Language Switcher -->
    <select
    id="languageSelector"
    aria-label="Select language"
    class="p-2 rounded-md bg-white/80 dark:bg-gray-700/80 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
  >
    {
      languages.map(({ value, label }) => (
        <option value={value}>{label}</option>
      ))
    }
  </select>

    <!-- Back to Top Button -->
  <button
  id="back-to-top"
  aria-label="Back to top"
  class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="w-6 h-6"
  >
  <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-square-arrow-up"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M16 12l-4 -4l-4 4" /><path d="M12 16v-8" /><path d="M3 3m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" /></svg>
  </svg>
</button>
  </aside>
  
  
<script>
   // Language Switcher
   document.getElementById('languageSelector').addEventListener('change', async (e) => {
    const language = e.target.value;

    try {
      // Fetch translated content from the backend API
      const response = await fetch(`/api/translate?lang=${language}`);

      if (!response.ok) {
        throw new Error(`Failed to fetch translation: ${response.statusText}`);
      }

      const translatedContent = await response.text();

      // Update the content on the page
      const contentElement = document.getElementById('content');
      if (contentElement) {
        contentElement.innerHTML = translatedContent;
      } else {
        console.error('Content element not found.');
      }
    } catch (error) {
      console.error('Translation failed:', error);
      alert('Failed to load translation. Please try again.');
    }
  });
  
  //Back to Top Script 
    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('back-to-top');  
      // Smooth scroll to top
      document.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    });
  </script>

  <style>
    .social-sticker {
      /* Ensure the sticker stays on top of other content */
      z-index: 1000;
    }
  </style>